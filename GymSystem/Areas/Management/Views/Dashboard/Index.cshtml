@model DashboardViewModel

@{
    ViewData["Title"] = "Management Dashboard";
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Dashboard</h1>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Members</h5>
                    <h2>@Model.TotalMembers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Staff</h5>
                    <h2>@Model.TotalStaff</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Active Users</h5>
                    <h2>@Model.ActiveUsers</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("Index", "Members")" class="list-group-item list-group-item-action d-flex justify-content-between">
                        <span>👥 Manage Members</span>
                        <span class="badge bg-secondary">View All</span>
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Index", "Staff")" class="list-group-item list-group-item-action d-flex justify-content-between">
                            <span>👔 Manage Staff</span>
                            <span class="badge bg-warning text-dark">Admin Only</span>
                        </a>
                    }
                    <a href="@Url.Action("Index", "Memberships")" class="list-group-item list-group-item-action">
                        📋 Membership Plans
                    </a>
                    <a href="@Url.Action("Index", "Reports")" class="list-group-item list-group-item-action">
                        📊 Reports
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Signups</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var user in Model.RecentSignups)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@user.FirstName @user.LastName</span>
                            <small class="text-muted">@user.JoinDate.ToString("MMM dd, yyyy")</small>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>