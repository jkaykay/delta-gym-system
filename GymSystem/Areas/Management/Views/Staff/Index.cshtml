@model List<GymSystem.Models.ApplicationUser>

@{
    ViewData["Title"] = "Manage Staff";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>👔 Staff</h1>
        <div>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create" class="btn btn-success">➕ Add Staff</a>
            }
            <span class="badge bg-primary fs-6 ms-2">@Model.Count total</span>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Staff & Administrators</h5>
        </div>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Employee ID</th>
                        <th>Hire Date</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td>@staff.FirstName @staff.LastName</td>
                            <td>@staff.Email</td>
                            <td>@(staff.EmployeeId ?? "—")</td>
                            <td>@(staff.HireDate?.ToString("MMM dd, yyyy") ?? "—")</td>
                            <td>
                                @if (staff.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@staff.Id" class="btn btn-sm btn-outline-info">
                                    Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@staff.Id" class="btn btn-sm btn-outline-primary">
                                    Edit
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <form asp-action="Delete" asp-route-id="@staff.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this staff member?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="card-body text-center text-muted">
                <p>No staff members found.</p>
            </div>
        }
    </div>
</div>